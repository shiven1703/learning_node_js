<%- include('../shared/header.ejs'); %>
  </head>

  <body>
    <%- include('../shared/navbar.ejs'); %>
    <!-- Page Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="mt-5">Welcome to the Store !</h1>
          <p class="lead">Enjoy Shopping.</p>
        </div>
      </div>
    </div>
    
    <div class="container">
      <% if(productList.length > 0) { %>
      <div class="row">
        <% for(let product of productList) { %>
        <div class="col-md-4 mt-4">
          <div class="card">
            <img
              class="card-img"
              src="/img/shirt.jpg"
              alt="Vans"
              height="200px"
              width="300px"
            />
            <div class=d-flex justify-content-end">
              <a href="#" class="card-link text-danger like">
                <i class="fas fa-heart"></i>
              </a>
            </div>
            <div class="card-body">
              <h4 class="card-title"><%= product.productName %></h4>
              <p class="card-text"><%= product.productDescription %></p>
    
              <div class="buy d-flex justify-content-between align-items-center">
                <div class="price text-success">
                  <h5 class="mt-4"><%= product.price %></h5>
                </div>
                <form action="/addToCart/<%= product.productId %>" method="POST">
                  <button class="btn btn-danger mt-3">Add to Cart</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
      <% } %>
    </div>
  
    <!-- Bootstrap core JavaScript -->
    <script src="/js/jquery.slim.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
  </body>
</html>
